# Required: Your private key for signing transactions
PRIVATE_KEY=

# Required: OpenAI API key for natural language processing
OPENAI_API_KEY=

# Optional: Base Sepolia RPC URL (defaults to public RPC)
RPC_URL=https://sepolia.base.org

# Optional: Chain name (defaults to BASE_SEPOLIA)
CHAIN_NAME=BASE_SEPOLIA

# Optional: Slippage tolerance in percentage (defaults to 0.5)
SLIPPAGE_TOLERANCE=0.5

# Optional: Default trading pair (defaults to ETH-USDC)
TRADING_PAIR=ETH-USDC

# Trading Configuration
MIN_MARGIN=0.01
DEFAULT_LEVERAGE=2

# Test Mode
IS_TEST=true 