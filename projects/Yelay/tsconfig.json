{
  "compilerOptions": {
    "lib": ["es2022"],
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "resolveJsonModule": true
  },
  "exclude": ["./node_modules"]
}
