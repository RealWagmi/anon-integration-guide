{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "lib": ["ES2020", "DOM"]
    },
    "include": ["*.ts", "abis/**/*.ts", "functions/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
